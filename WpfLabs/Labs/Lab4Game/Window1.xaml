<Window x:Class="Lab4Game.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lgc="clr-namespace:Lab4GameControls;assembly=Lab4GameControls"
        Title="Window1" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <DockPanel>
        <lgc:GameControl Name="GameControl" Height="720" Width="1280"/>
        <StackPanel DockPanel.Dock="Right" Width="300">
            <Button Content="Старт/Пауза" Command="lgc:GameCommands.Start" CommandTarget="{Binding ElementName=GameControl}"/>
            <Button Content="Reset" Command="lgc:GameCommands.Reset" CommandTarget="{Binding ElementName=GameControl}"/>
            <Button Content="Огонь" Command="lgc:GameCommands.Fire" CommandTarget="{Binding ElementName=GameControl}"/>
        </StackPanel>
    </DockPanel>
</Window>
